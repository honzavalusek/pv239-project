<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MalyFarmar.ViewModels"
             xmlns:converters="clr-namespace:MalyFarmar.Converters"
             x:Class="MalyFarmar.Pages.CreateUserPage"
             x:DataType="viewmodels:CreateUserViewModel" Title="Create New Account">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Label Text="First Name*" />
            <Entry Text="{Binding FirstName}" Placeholder="e.g., Jan" />
            <Label Text="{Binding FirstNameError}" TextColor="Red" IsVisible="{Binding FirstNameError, Converter={StaticResource StringToBoolConverter}}" />

            <Label Text="Last Name*" />
            <Entry Text="{Binding LastName}" Placeholder="e.g., NovÃ¡k" />
            <Label Text="{Binding LastNameError}" TextColor="Red" IsVisible="{Binding LastNameError, Converter={StaticResource StringToBoolConverter}}" />

            <Label Text="Email*" />
            <Entry Text="{Binding Email}" Placeholder="e.g., jan.novak@example.com" Keyboard="Email" />
            <Label Text="{Binding EmailError}" TextColor="Red" IsVisible="{Binding EmailError, Converter={StaticResource StringToBoolConverter}}" />

            <Label Text="Phone Number*" />
            <Entry Text="{Binding PhoneNumber}" Placeholder="e.g., +420123456789" Keyboard="Telephone" />
            <Label Text="{Binding PhoneNumberError}" TextColor="Red" IsVisible="{Binding PhoneNumberError, Converter={StaticResource StringToBoolConverter}}" />

            <Label Text="Device Location (Optional):" FontAttributes="Bold" Margin="0,15,0,0" />
            <Button Text="Get Current Location" 
                    Command="{Binding GetLocationCommand}" 
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" 
                    Margin="0,5,0,0"/>
            <Label Text="{Binding LocationStatus}" 
                   IsVisible="{Binding LocationStatus, Converter={StaticResource StringToBoolConverter}}" 
                   Margin="0,5,0,0"
                   LineBreakMode="WordWrap"/>
            
            <Button Text="Create Account" Command="{Binding CreateAccountCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" Margin="0,20,0,0" />
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" />
            <Label Text="{Binding GeneralError}" TextColor="Red" IsVisible="{Binding GeneralError, Converter={StaticResource StringToBoolConverter}}" HorizontalTextAlignment="Center" Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>