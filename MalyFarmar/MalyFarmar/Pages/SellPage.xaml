<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MalyFarmar.ViewModels"
             xmlns:apidtos="clr-namespace:MalyFarmar.Clients"
             x:Class="MalyFarmar.Pages.SellPage"
             x:DataType="viewmodels:SellPageViewModel"
             Title="My Products for Sale">

    <ContentPage.Resources>
        </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Product"
                     Command="{Binding NavigateToCreateProductCommand}"
                     Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, *" Margin="10">
        <ActivityIndicator Grid.RowSpan="2" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center" />

        <RefreshView Grid.Row="1" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding UserProducts}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="{Binding StatusMessage}"
                               IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="apidtos:ProductListViewDto">
                        <Frame Padding="10" Margin="0,5" CornerRadius="5" BorderColor="LightGray" HasShadow="True">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto" ColumnSpacing="10">
                                <Image Source="{Binding ImageUrl, TargetNullValue='placeholder_product.png'}" Grid.RowSpan="3"
                                       WidthRequest="70"
                                       HeightRequest="70"
                                       Aspect="AspectFill"
                                       VerticalOptions="Center"/>

                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Name}" FontSize="Subtitle" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
                                <Label Grid.Row="1" Grid.Column="1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Price: "/>
                                            <Span Text="{Binding PricePerUnit, StringFormat='{0:C}'}"/>
                                            <Span Text="/"/>
                                            <Span Text="{Binding Unit}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="2" Grid.Column="1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Available: "/>
                                            <Span Text="{Binding RemainingAmount}"/>
                                            <Span Text=" "/>
                                            <Span Text="{Binding Unit}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                </Grid>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SellPageViewModel}}, Path=GoToProductDetailsCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
        
        <Label Grid.Row="1" Text="{Binding StatusMessage}"
               IsVisible="{Binding StatusMessage, Converter={StaticResource StringToBoolConverter}}" TextColor="Red"
               VerticalOptions="Center" HorizontalOptions="Center"
               HorizontalTextAlignment="Center"/>
    </Grid>
</ContentPage>