<?xml version="1.0" encoding="utf-8" ?>
<sharedPages:BaseContentPage x:Class="MalyFarmar.Pages.EditProductPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:MalyFarmar.ViewModels"
    xmlns:sharedPages="clr-namespace:MalyFarmar.Pages.Shared" xmlns:converters="clr-namespace:MalyFarmar.Converters"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="viewmodels:EditProductViewModel"
    Title="Edit Product">

    <sharedPages:BaseContentPage.Resources>
        <ResourceDictionary>
            <toolkit:IsStringNotNullOrEmptyConverter x:Key="IsStringNotNullOrEmptyConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </sharedPages:BaseContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" />

            <!-- <Image Source="{Binding ImageUrl, TargetNullValue='placeholder_product.png'}" -->
                   <!-- HeightRequest="200" Aspect="AspectFit" BackgroundColor="LightGray" Margin="0,0,0,10"/> -->

            <Label Text="Product Name*" />
            <Entry Text="{Binding Name}" Placeholder="Enter product name" />

            <Label Text="Description" />
            <Editor Text="{Binding Description}" Placeholder="Enter product description" AutoSize="TextChanges" HeightRequest="100"/>

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Total Amount*" />
                    <Entry Text="{Binding TotalAmountStr}" Keyboard="Numeric" Placeholder="e.g., 100.50" />
                </VerticalStackLayout>
                <Label Grid.Column="1" Text="{Binding UnitDisplay}" VerticalOptions="End" Padding="0,0,0,10" FontAttributes="Bold"/>
            </Grid>
            
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5">
                 <VerticalStackLayout Grid.Column="0">
                    <Label Text="Price Per Unit*" />
                    <Entry Text="{Binding PricePerUnitStr}" Keyboard="Numeric" Placeholder="e.g., 10.99" />
                </VerticalStackLayout>
                <Label Grid.Column="1" Text="{Binding UnitDisplay, StringFormat='/ {0}'}" VerticalOptions="End" Padding="0,0,0,10" FontAttributes="Bold"/>
            </Grid>

            <Label Text="{Binding ErrorMessage}" 
                   TextColor="Red" 
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource IsStringNotNullOrEmptyConverter}}" 
                   Margin="0,10,0,0"/>

            <Button Text="Save Changes" 
                    Command="{Binding SaveProductCommand}" 
                    IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBoolConverter}}" 
                    HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
            
            <Button Text="Delete Product" 
                    Command="{Binding DeleteProductCommand}" 
                    BackgroundColor="IndianRed"
                    IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBoolConverter}}" 
                    HorizontalOptions="FillAndExpand" Margin="0,10,0,0" />
             <ActivityIndicator IsRunning="{Binding IsSubmitting}" IsVisible="{Binding IsSubmitting}" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</sharedPages:BaseContentPage>